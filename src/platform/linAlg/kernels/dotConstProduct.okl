@kernel void dotProduct(const dlong N,
                        const dlong fieldOffset,
                        @ restrict const dfloat *v1,
                        const dfloat v2x,
                        const dfloat v2y,
                        const dfloat v2z,
                        @ restrict dfloat *v3)
{

  for (dlong n = 0; n < N; ++n; @tile(p_blockSize, @outer, @inner)) {
    v3[n + 0 * fieldOffset] = v1[n + 0 * fieldOffset] * v2x;
    v3[n + 1 * fieldOffset] = v1[n + 1 * fieldOffset] * v2y;
    v3[n + 2 * fieldOffset] = v1[n + 2 * fieldOffset] * v2z;
  }
}

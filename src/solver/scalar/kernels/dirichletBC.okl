@kernel void dirichletBC(@ restrict const char *name,
                         const dlong Nelements,
                         const dlong offset,
                         const dlong scalarId,
                         const double time,
                         @ restrict const dfloat *sgeo,
                         @ restrict const dfloat *x,
                         @ restrict const dfloat *y,
                         @ restrict const dfloat *z,
                         @ restrict const dlong *vmapM,
                         @ restrict const int *EToBM,
                         @ restrict const int *EToB,
                         @ restrict const dfloat *U,
                         @ restrict const dfloat *diff,
                         @ restrict const dfloat *rho,
                         const dlong neknekOffset,
                         @ restrict const dlong *neknekPoints,
                         const int neknekUInitialized,
                         @ restrict const dfloat *neknekU,
                         @ restrict const dfloat *neknekS,
                         const int neknekScalarIndex,
                         @ restrict const dfloat *W,
                         @ restrict dfloat *S)
{
  for (dlong e = 0; e < Nelements; e++; @outer(0)) {
    for (int f = 0; f < p_Nfaces; f++) {
      @barrier();
      for (int m = 0; m < p_Nfp; ++m; @inner(0)) {
        struct bcData bc;
        const int n = m + f * p_Nfp;
        const dlong sk = e * p_Nfp * p_Nfaces + n;
        const dlong idM = vmapM[sk];
        const dlong bcType = EToB[f + p_Nfaces * e];

        if (bcType == p_bcType_udfDirichlet || bcType == p_bcType_interpolation) {
          _strcpy(bc.fieldName, name);
          bc.id = EToBM[f + p_Nfaces * e];
          bc.idxVol = idM;
          bc.time = time;
          bc.x = x[idM];
          bc.y = y[idM];
          bc.z = z[idM];
          bc.uxFluid = U[idM + 0 * offset];
          bc.uyFluid = U[idM + 1 * offset];
          bc.uzFluid = U[idM + 2 * offset];
          bc.usrwrk = W;
          bc.fieldOffset = offset;
          bc.idScalar = scalarId;

          bc.diffCoeff = diff[idM];
          bc.transCoeff = rho[idM];

          bc.nx = sgeo[sk * p_Nsgeo + p_NXID];
          bc.ny = sgeo[sk * p_Nsgeo + p_NYID];
          bc.nz = sgeo[sk * p_Nsgeo + p_NZID];

          bc.t1x = sgeo[sk * p_Nsgeo + p_T1XID];
          bc.t1y = sgeo[sk * p_Nsgeo + p_T1YID];
          bc.t1z = sgeo[sk * p_Nsgeo + p_T1ZID];

          bc.t2x = sgeo[sk * p_Nsgeo + p_T2XID];
          bc.t2y = sgeo[sk * p_Nsgeo + p_T2YID];
          bc.t2z = sgeo[sk * p_Nsgeo + p_T2ZID];

          bc.sScalar = 0.0;

          bc.sScalarInt = 0.0;
          bc.uxFluidInt = 0.0;
          bc.uyFluidInt = 0.0;
          bc.uzFluidInt = 0.0;

          if (bcType == p_bcType_interpolation) {
            const int neknekId = neknekPoints[idM];
            if (neknekScalarIndex >= 0) {
              bc.sScalarInt = neknekS[neknekId + neknekScalarIndex * neknekOffset];
            }
            if (neknekUInitialized) {
              bc.uxFluidInt = neknekU[neknekId + 0 * neknekOffset];
              bc.uyFluidInt = neknekU[neknekId + 1 * neknekOffset];
              bc.uzFluidInt = neknekU[neknekId + 2 * neknekOffset];
            }
          }
          udfDirichlet(&bc);
          S[idM] = bc.sScalar;
        }
      }
    }
  }
}

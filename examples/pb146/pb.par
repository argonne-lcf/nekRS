[GENERAL]
#verbose = true
polynomialOrder = 7
#startFrom = "restart.fld"
stopAt = endTime
endTime = 20

dt = 2.0e-3
timeStepper = tombo2
advectionSubCyclingSteps = 2

checkpointControl = simulationTime 
checkpointInterval = 1

regularization = hpfrt + nModes=2 + scalingCoeff=20 

scalars = TEMPERATURE

[FLUID PRESSURE]
residualTol = 1e-04

[FLUID VELOCITY]
boundaryTypeMap = udfDirichlet, zeroNeumann, zeroDirichlet, zeroDirichlet 
rho = 1.0
viscosity = 1/5000.0
residualTol = 1e-06

[SCALAR TEMPERATURE]
boundaryTypeMap = udfDirichlet, zeroNeumann, zeroNeumann, udfNeumann
residualTol = 1e-06
rhoCp = 1.0
conductivity = 1/5000.0

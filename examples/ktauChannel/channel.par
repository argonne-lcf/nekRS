[GENERAL]
polynomialOrder = 7
#startFrom = "r.fld"+time=0
stopAt = endTime
endTime = 50
dt = 5e-02
timeStepper = tombo2

checkpointControl = simulationTime 
checkpointInterval = 50

constFlowRate = meanVelocity=1.0 + direction=X

scalars = temperature, k, tau

[PROBLEMTYPE]
equation = navierStokes+variableViscosity

[FLUID PRESSURE]
residualTol = 1e-04

[FLUID VELOCITY]
boundaryTypeMap = zeroDirichlet, zeroDirichletY/zeroNeumann 
residualTol = 1e-06
rho = 1.0
viscosity = 1/43500. 

[SCALAR TEMPERATURE]
#solver = none
boundaryTypeMap = udfDirichlet, zeroNeumann 
residualTol = 1e-06
transportCoeff = 1.0
diffusionCoeff = 1/43500. 

[SCALAR TAU]  
boundaryTypeMap = udfDirichlet, zeroNeumann 
residualTol = 1e-08

[SCALAR K]
boundaryTypeMap = udfDirichlet, zeroNeumann 
residualTol = 1e-08

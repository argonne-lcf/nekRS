[GENERAL] 
polynomialOrder = 7
#startFrom = "restart.fld"
stopAt = endTime
endTime = 100 

dt = targetCFL=4.0+max=0.05
timeStepper = tombo2 
advectionSubCyclingSteps = 2

checkpointControl = simulationTime 
checkpointInterval = 5

regularization = hpfrt + nModes = 1 + scalingCoeff = 15

scalars = TEMPERATURE

[FLUID PRESSURE]
residualTol = 1e-04

[FLUID VELOCITY]
boundaryTypeMap = zeroDirichlet, zeroDirichlet 
rho = 1.0
viscosity = sqrt(7/1e8) # sqrt(PRA/RA) 
residualTol = 1e-06

[SCALAR TEMPERATURE]
boundaryTypeMap = udfDirichlet, zeroNeumann 
diffusionCoeff = 1/sqrt(7*1e8) # 1/sqrt(RA*PRA)
transportCoeff = 1.0
residualTol = 1e-06
